<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ProgressBar
        android:id="@+id/searchList_layout_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="110dp"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/search_layout_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        tools:srcCompat="@drawable/blue_sweatshirt" />

    <TextView
        android:id="@+id/search_layout_prodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/search_layout_image"
        android:text="Sweatshirt"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/search_layout_stockCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_layout_prodName"
        android:layout_alignStart="@+id/search_layout_prodName"
        android:layout_alignEnd="@+id/search_layout_prodName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="In Stock (5)" />


</RelativeLayout>